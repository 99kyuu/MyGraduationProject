<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:paddingBottom="@dimen/dp_12"
        android:orientation="vertical">

        <!--由于侧滑栏沉浸式存在的问题，所以这个预留25dp的宽度-->
        <View
            android:id="@+id/header_obtain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25">

        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:gravity="center">

            <ImageView
                android:id="@+id/header_user_photo"
                android:src="@drawable/user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/header_user_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_20"
                android:text="ldx"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/header_user_more"
                android:src="@drawable/user_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ProgressBar
            android:id="@+id/header_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:min="0"
            android:max="100"
            android:progress="40"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progressbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_9" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/header_user_health_number"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/health_figure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:text="健康指数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="#ffffff"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/header_user_health_state"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="亚健康"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/health_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:text="健康状态"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/green">
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_main_icon" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/header_my_wallet"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的钱包"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_my_shop"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="购物车"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
