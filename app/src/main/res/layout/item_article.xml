<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:paddingTop="@dimen/dp_20"
    android:background="#F5F5F5"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/item_article_relative"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/item_article_card"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="146dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/item_article_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_72" />
                    <ImageView
                        android:id="@+id/item_article_circular"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_below="@+id/item_article_image"
                        android:background="@drawable/circular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/item_article_label"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@+id/item_article_circular"
                        android:layout_below="@+id/item_article_image"
                        android:text="健康时报"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/item_article_time"
                        android:text="07月04日 13:21"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_below="@+id/item_article_label"
                        android:layout_toRightOf="@+id/item_article_circular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <CheckBox
                android:id="@+id/item_article_more"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:background="@drawable/colletcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"/>


            <TextView
                android:id="@+id/item_article_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/item_article_card"
                android:textColor="#333333"
                android:textSize="20sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/item_article_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_below="@+id/item_article_title"
                android:layout_toRightOf="@id/item_article_card"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:textColor="#777777"
                android:textSize="14sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>
