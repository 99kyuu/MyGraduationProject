<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    tools:context=".activity.ForgetActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg"
        android:paddingBottom="@dimen/dp_12">

        <EditText
            android:id="@+id/forget_email"
            android:gravity="center"
            android:hint="邮箱名"
            android:maxLines="1"
            android:textColorHint="#e7e7e7"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg"
        android:paddingBottom="@dimen/dp_12">

        <EditText
            android:id="@+id/forget_code"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="验证码"
            android:maxLines="1"
            android:textColorHint="#e7e7e7"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forget_get_code"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="right"
            android:text="获取验证码"
            android:textColor="@color/green"
            android:maxLength="6"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg"
        android:paddingBottom="@dimen/dp_12">

        <EditText
            android:id="@+id/user_new_pwd"
            android:gravity="center"
            android:hint="输入密码"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColorHint="#e7e7e7"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg"
        android:paddingBottom="@dimen/dp_12">

        <EditText
            android:id="@+id/user_new_pwd_confirm"
            android:gravity="center"
            android:hint="再次输入密码"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColorHint="#e7e7e7"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/forget_button"
            android:text="完成"
            android:layout_weight="1"
            android:textSize="@dimen/sp_18"
            android:textColor="#ffffff"
            android:background="@drawable/green_button_bg"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_36" />


        <Button
            android:id="@+id/reset_button"
            android:text="重置"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:textSize="@dimen/sp_18"
            android:textColor="#ffffff"
            android:background="@drawable/green_button_bg"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_36" />
    </LinearLayout>

</LinearLayout>